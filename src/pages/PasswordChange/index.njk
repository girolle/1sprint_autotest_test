<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
      name="viewport"
    />
    <meta content="ie=edge" http-equiv="X-UA-Compatible" />
    <link href="./styles.css" rel="stylesheet" />
    <link href="../../styles.css" rel="stylesheet" />
    <title>{{PasswordChange.title}}</title>
  </head>
  <body>
    <aside>
      <div class="back-link"></div>
    </aside>
    <main>
      <form class="profile">
        <div class="profile__avatar-container">
          {% block avatar %}
            {% set className = "profile__avatar" %}
            {% include "../../components/Avatar/avatar.njk" %}
          {% endblock %}
        </div>
        <div class="profile__field-container">
          <label for="{{PasswordChange.form.oldPassword.name}}">
            {{PasswordChange.form.oldPassword.label}}
          </label>
          <input
            class="profile__field"
            id="{{PasswordChange.form.oldPassword.name}}"
            name="{{PasswordChange.form.oldPassword.name}}"
            placeholder="{{PasswordChange.form.oldPassword.placeholder}}"
            required
            type="password"
          />
        </div>
        <div class="profile__field-container">
          <label for="{{PasswordChange.form.newPassword.name}}">
            {{PasswordChange.form.newPassword.label}}
          </label>
          <input
            class="profile__field"
            id="{{PasswordChange.form.newPassword.name}}"
            name="{{PasswordChange.form.newPassword.name}}"
            placeholder="{{PasswordChange.form.newPassword.placeholder}}"
            required
            type="password"
          />
        </div>
        <div class="profile__field-container">
          <label for="{{PasswordChange.form.newPasswordConfirm.name}}">
            {{PasswordChange.form.newPasswordConfirm.label}}
          </label>
          <input
            class="profile__field"
            id="{{PasswordChange.form.newPasswordConfirm.name}}"
            name="{{PasswordChange.form.newPasswordConfirm.name}}"
            placeholder="{{PasswordChange.form.newPasswordConfirm.placeholder}}"
            required
            type="password"
          />
        </div>

        {% block button %}
          {% set type = "submit" %}
          {% set title = PasswordChange.form.button.label %}
          {% set className = "profile__button" %}
          {% include "../../components/Button/button.njk" %}
        {% endblock %}
      </form>
    </main>
    <script src="../../js/form.js"></script>
  </body>
</html>
